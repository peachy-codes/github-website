---
import BaseLayout from "@layouts/BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout title={`${frontmatter.title} • Georgia von Minden`}>
  <section class="container" style="padding-top:2rem; padding-bottom:3rem;">
    <h1 class="gradient-accent" style="margin-bottom:.5rem;">{frontmatter.title}</h1>

    {frontmatter.overview && <p style="color:#475569; margin:0 0 .75rem 0;">{frontmatter.overview}</p>}

    {frontmatter.links?.length > 0 && (
      <div style="margin:0 0 1rem 0; display:flex; flex-wrap:wrap; gap:.5rem;">
        {frontmatter.links.map((l) => (
          <a class="pill" href={l.href} target="_blank" rel="noreferrer">
            {l.label} ↗
          </a>
        ))}
      </div>
    )}

    <div style="margin:.75rem 0 1rem 0; display:flex; flex-wrap:wrap; gap:.5rem;">
      {frontmatter.stack?.map((s) => <span class="pill">{s}</span>)}
      {frontmatter.kpis?.map((k) => <span class="kpi">{k}</span>)}
    </div>

    <article class="card">
      <slot />
    </article>
  </section>
</BaseLayout>