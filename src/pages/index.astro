
---
import BaseLayout from "@layouts/BaseLayout.astro";
import LatestPosts from "@components/LatestPosts.astro";
import ProjectGrid from "@components/ProjectGrid.astro";
import TestimonialList from "@components/TestimonialList.astro";
---
<BaseLayout>
  <section class="hero-gradient" style="padding:4rem 0 2rem 0;">
    <div class="container">
      <h1 style="font-size:2.2rem; line-height:1.2;">
        Machine learning centered on <span class="gradient-accent">privacy, safety, and equity</span>.
      </h1>
      <p style="max-width:780px; color:#475569; font-size:1.05rem;">
        I design and deploy ML systems ranging from local LLM pipelines using tools like LangChain to MLOps on Kubernetes â€”
        with a focus on civil-rights investigations and trustworthy deployments that center accessibility by underserved communities.
      </p>
      <div style="margin-top:1rem;">
        <a class="pill" href={import.meta.env.BASE_URL + "work"}>View my work</a>
        <a class="pill" href={import.meta.env.BASE_URL + "writing"} style="background:#ecfeff; color:#0f766e;">Latest writing</a>
      </div>
    </div>
  </section>
  <section class="container" style="padding:1rem 0 2rem 0;">
    <h2>Featured work</h2>
    <ProjectGrid />
  </section>
  <section class="container" style="padding:1rem 0 2rem 0;">
    <h2>Testimonials</h2>
    <TestimonialList />
  </section>
  <section class="container" style="padding:1rem 0 3rem 0;">
    <h2>Latest writing</h2>
    <LatestPosts />
  </section>
</BaseLayout>
